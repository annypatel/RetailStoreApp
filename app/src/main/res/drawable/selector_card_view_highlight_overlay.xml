<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <solid android:color="@color/selectable_item_pressed_color" />
            <corners android:radius="@dimen/card_view_corner_radius" />

        </shape>
    </item>


    <item android:state_checked="true">
        <shape>

            <solid android:color="@color/selectable_item_pressed_color" />
            <corners android:radius="@dimen/card_view_corner_radius" />

        </shape>
    </item>


    <item android:state_focused="true" android:state_window_focused="true">
        <shape>

            <solid android:color="@color/selectable_item_focused_color" />
            <corners android:radius="@dimen/card_view_corner_radius" />

        </shape>
    </item>

</selector>