<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_header_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nav_drawer_header_banner"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/nav_drawer_header_top_margin"
        android:orientation="vertical"
        android:padding="@dimen/layout_outer_padding">

        <ImageView
            android:layout_width="@dimen/nav_drawer_avatar_height_width"
            android:layout_height="@dimen/nav_drawer_avatar_height_width"
            android:background="@drawable/layer_nav_drawer_default_avatar"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/dummy_avatar_name"
            android:textAppearance="@style/TextAppearance.App.Primary.Inverse.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/dummy_avatar_email"
            android:textAppearance="@style/TextAppearance.App.Primary.Inverse.Small" />
    </LinearLayout>

</FrameLayout>